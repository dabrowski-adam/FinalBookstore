<Window x:Class="WPFLibrary.EditBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFLibrary"
        mc:Ignorable="d"
        Title="Editing Book" MinHeight ="300" MinWidth="400" Height="300" Width="400">


    <Border Padding="10">
        <StackPanel>
            <!-- Window Title-->
            <TextBlock Text="Editing book" FontWeight="Bold" Margin="0 10" />

            <!-- Title -->
            <TextBlock Text="Title" />
            <TextBox x:Name="TitleText" Padding="2" />

            <!-- Author -->
            <TextBlock Text="Author" Margin="0 10 0 0" />
            <TextBox x:Name="AuthorText" Padding="2" />

            <!-- Genre -->
            <TextBlock Text="Genre" Margin="0 10 0 0" />
            <TextBox x:Name="GenreText" Padding="2" />

            <!-- Buttons -->
            <Button x:Name="UpdateBookButton" Click="UpdateBookButton_Click" Margin="0 20 200 10" Grid.Column="0" Content="Update Book"/>
            <Button x:Name="CloseButton" Click="CloseButton_Click" Margin="0 0 200 10" Grid.Column="0" Content="Close"/>
        </StackPanel>
    </Border>
</Window>
